{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Forwarding": {
    "BaseUrl": "https://automation.domain",
    "HealthUrl": "https://automation.domain/health",
    "TimeoutSeconds": 10
  },
  "Queue": {
    "ConnectionString": "UseDevelopmentStorage=true",
    "QueueName": "webhooks",
    "VisibilityTimeoutSeconds": 30
  },
  "Validation": {
    "BasePath": "validations",
    "Mode": "permissive"
  },
  "Worker": {
    "PollIntervalSeconds": 30,
    "BatchSize": 16,
    "HealthCheckIntervalSeconds": 60,
    "HealthFailureThreshold": 3,
    "HealthSuccessThreshold": 3
  }
}
